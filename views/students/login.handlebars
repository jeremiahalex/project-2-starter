<div class="container">

<h1>Student Login</h1>

<div class="row">
    <form class="col s12" action="/login" method="post">
      <div class="row">
        <div class="input-field col s12">
          <input placeholder="email" name="student[email]" id="name" type="text" class="validate">
          <label for="name"></label>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s12">
          <input placeholder="Password" id="password" name="student[password]" type="password" class="validate">
          <label for="password"></label>
        </div>
      </div>
      <button class="btn waves-effect waves-light" type="submit" name="action">Submit
   <i class="material-icons right"></i>
 </button>
    </form>
  </div>


</div>
