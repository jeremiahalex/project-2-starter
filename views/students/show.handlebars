<div class="container">

  <h3>{{student.name}}</h3>
</br>
  <div class="details">

    <h4>Profile Details</h4>
  </br>
  <form action="/studentshow/{{student.id}}?_method=PUT" method="post">
  <div class="student card-panel">
      <input type="text" name="name" value="{{student.name}}">
      <span class="blue-text text-darken-2">Name : {{student.name}}</span>
    </div>
  </br>
  <div class="email card-panel">
      <input type="text" name="email" value="{{student.email}}">
      <span class="blue-text text-darken-2">Email : {{student.email}}</span>
    </div>
  </br>
  <div class="description card-panel">
    <input type="text" name="description" value="{{student.description}}">
      <span class="blue-text text-darken-2">About : {{student.description}}</span>
    </div>
  </br>
  <div class="status card-panel">
    <input type="text" name="status" value="{{student.status}}">
      <span class="blue-text text-darken-2">Status : {{student.status}}</span>
    </div>
  </br>
    <button class="btn waves-effect waves-light" type="submit" name="action">Submit
   <i class="material-icons right"></i>
 </button>

  </form>
  </div>
</div>
