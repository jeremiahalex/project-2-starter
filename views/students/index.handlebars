  <form action = '/students' method='post'>

  <div class="form-group">
    <label>NAME:
      <input type="text" name="student[name]" placeholder="Please enter your name">
    </label>
  </div>

  <div class="form-group">
    <label>GENDER:
      <select name="student[gender]">
        <option selected disabled hidden style='display: none' value=''></option>
        <option value="Male">Male</option>
        <option value="Female">Female</option>
      </select>
    </label>
  </div>

  <div class="form-group">
    <label>ADDRESS:
      <input type="text" name="student[address]" placeholder="Please enter your address">
    </label>
  </div>

  <div class="form-group">
    <label>POSTAL CODE:
      <input type="text" name="student[postalCode]" placeholder="Please enter your Postal Code">
    </label>
  </div>

  <div class="form-group">
    <label>SUBJECT:
      <select name="student[subject]">
        <option selected disabled hidden style='display: none' value=''></option>
        <option value="English">English</option>
        <option value="Math">Math</option>
        <option value="Science">Science</option>
      </select>
    </label>
  </div>

  <div class="form-group">
    <label>LEVEL:
      <select name="student[level]">
        <option selected disabled hidden style='display: none' value=''></option>
        <option type="checkbox" value="1">1</option>
        <option type="checkbox" value="2">2</option>
        <option type="checkbox" value="3">3</option>
        <option type="checkbox" value="4">4</option>
        <option type="checkbox" value="5">5</option>
      </select>
    </label>
  </div>

  <div class="form-group">
    <label>STREAM:
      <select name="student[stream]">
        <option selected disabled hidden style='display: none' value=''></option>
        <option value="Express">Express</option>
        <option value="Normal Academic">Normal Academic</option>
        <option value="Normal Technical">Normal Technical</option>
      </select>
    </label>
  </div>

  <div class="form-group">
    <label>EMAIL:
      <input type="text" name="student[email]" placeholder="Please enter your email">
    </label>
  </div>

  <div class="form-group">
    <label>PASSWORD:
      <input type="password" name="student[password]" placeholder="Please enter your password">
    </label>
  </div>

<button>Register</button>

</form>
