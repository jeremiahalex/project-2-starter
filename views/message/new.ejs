
<div class='container'>
  <% include ../partials/alerts %>
  <div class='col-md-12  align-middle'>
    <form action='/user/message/new' method='POST'>

      <div class='form-group col-md-6'>
        <label for='sel1'>Recipient</label>
        <select class='form-control' id='sel1' name='recipient'>
          <% users.forEach((user) => { %>
            <option value='<%=user._id%>'><%=user.name%></option>
            <%})%>
          </select>
        </div>


        <div class='form-group'>
          <textarea id='messageContent'  class='form-control' rows='10' type='string' name='content' placeholder='Enter your message here'></textarea>
        </div>

        <div class='form-group flex'>
          <input class='btn btn-primary' type='submit'>
        </div>

      </form>
      <a class='flex' href='/event'><button class='btn btn-danger'>Cancel</button></a>
    </div>
  </div>
