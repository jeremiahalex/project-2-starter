<form enctype="multipart/form-data" action="/vegetable" method="post">

  <input type="hidden" name="id" value="{{supp.id}}">

  <label for="lblCompanyName">Vegetable Name :</label>
  <input type="text" name="veg[txtName]" placeholder="e.g. John Doe">
  <br/>

  <label for="lblEmail">Price per KG $:</label>
  <input type="text" name="veg[txtPrice]" placeholder="e.g. 2">
  <br/>

  <label for="lblBusinessType">Minimum Quantity in KG :</label>
  <input type="text" name="veg[txtQuantity]" placeholder="e.g. 1">
  <br/>

  <label for="lblPhoto">Select your photo :</label>
  <input type="file" name="myFile" class="form-control-file">
  <br/>

  <button type="submit" name="btnSubmit">Submit</button>
</form>
