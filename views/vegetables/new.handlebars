<div class="page-header">
	<div class="page-header-image" data-parallax="true" style="background-image: url('/assets/img/wallpaper3.jpg');"></div>
	<br><br><br><br>
	<div class="container">
		<div class="row">
			<div class="card card-login">
				<div class="card-plain">
<h3 class="title text-center">Add Vegetable</h3>
<form enctype="multipart/form-data" action="/vegetable" method="post">

  <input type="hidden" name="id" value="{{supp.id}}">

  <label for="lblCompanyName">Vegetable Name :</label>
	<div class="text-center">
  <input type="text"  class="form-control" name="veg[txtName]" placeholder="e.g. John Doe">
</div>
  <br/>

  <label for="lblEmail">Price per KG $:</label>
	<div class="text-center">
  <input type="text" class="form-control"  name="veg[txtPrice]" placeholder="e.g. 2">
</div>
  <br/>

  <label for="lblBusinessType">Minimum Quantity in KG :</label>
	<div class="text-center">
  <input type="text" class="form-control"  name="veg[txtQuantity]" placeholder="e.g. 1">
</div>
  <br/>

  <label for="lblPhoto">Select your photo :</label>
	<div class="text-center">
  <input type="file" name="myFile" class="form-control-file">
</div>
  <br/>
<div class="text-center">
  <button type="submit" class="btn bg-warning" name="btnSubmit">Submit</button>
</div>
</div>
</form>
</div>
</div>
</div>
</div>
</div>
