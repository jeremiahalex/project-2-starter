<div class="container">
  <div class="row">
    <h3 class="mt-3 ml-3">Edit Profile</h3>
  </div>
  <div class="col-sm-12">
  <form action="/profile/<%= currentUser._id %>/edit" method="POST">
    <div class="form-group row">
      <label class="col-sm-4 col-form-label">Role </label>
      <div class="col-sm-4">
        <% if (user.role) { %>
              <input class="form-control" type="text" name="role" value="<%= user.role %>" readonly>
          <% } else {%>
        <div class="form-check">
          <label class="form-check-label"><input class="form-check-input" type="radio" name="role" value="teacher">Teacher</label>
        </div>
        <div class="form-check">
          <label class="form-check-label"><input class="form-check-input" type="radio" name="role" value="student">Student</label>
        </div>
        <% } %>
      </div>
    </div>
    <div class="form-group row">
      <label class="col-sm-4 col-form-label">Name of school: </label>
      <div class="col-sm-6">
        <% if (user.school) { %>
              <input class="form-control" type="text" name="school" value="<%= user.school.name %>">
          <% } else {%>
            <label for="school">Select or enter name of school:</label>
            <input type="text" name="school" class="form-control">
            <select class="form-control" id="select-school" name="school" >
              <% schools.forEach(function (school) { %>
                <option value="<%= school._id %>"><%= school.name %> </option>
              <% }) %>
            </select>

        <% } %>
      </div>
    </div>

    <div class="form-group row">
      <label class="col-sm-4 col-form-label">Name</label>
      <div class="col-sm-6">
        <input class="form-control" placeholder="Please enter your full name" type="text" name="name" value="<%= user.name %>">
      </div>
    </div>
    <div class="form-group row">
      <label class="col-sm-4 col-form-label">Email</label>
      <div class="col-sm-6">
        <input class="form-control" type="text" name="email" value="<%= user.email %>" >
      </div>
    </div>
    <div class="form-group row">
      <div class="col-sm-4">
      </div>
      <div class="col-sm-6">
        <input class="form-control btn btn-primary" type="submit" value="Submit">
      </div>
    </div>
  </form>
  </div>
</div>
