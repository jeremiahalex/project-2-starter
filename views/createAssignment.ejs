<div class="container">
  <h3 class="mt-3 ml-3">Create New Assignment</h3>
  <form action="/assignment/create" method="POST">
    <div class="form-group row">
      <div class="form-check form-check-inline">
        <label class="form-check-label">
          <input class="form-check-input" type="radio" name="a_type" value="online">
          Online Assignment</label>
      </div>
      <div class="form-check form-check-inline">
        <label class="form-check-label">
          <input class="form-check-input" type="radio" name="a_type" value="offline">
          Offline Assignment</label>
      </div>
      <div class="form-check form-check-inline">
        <label class="form-check-label">
          <input class="form-check-input" type="radio" name="a_type" value="test">
          Test</label>
      </div>
    </div>
  <div class="form-group row">

    <div class="col-sm-2">
      <label for="due_date">Due Date</label>
      <input type="date" class="form-control" name="due_date" required>
    </div>

    <div class="col-sm-2">
      <label for="classroom">Select a Class:</label>
      <select class="form-control" id="select-class" name="classroom" >
        <% classrooms.forEach(function (classroom) { %>
          <option value="<%= classroom._id %>"><%= classroom.name %> </option>
        <% }) %>
      </select>
    </div>
    <div class="col-sm-3">
      <label for="est_time">Estimated Time to complete</label>
      <div class="input-group col-sm-8 mb-2 mb-sm-0">
        <input type="number" class="form-control" name="est_time" required>
        <div class="input-group-addon">hr</div>
      </div>
    </div>
  </div>


  <div class="form-group">
    <div class="col-sm-12"><label for="title">Title</label></div>
  </div>

  <div class="form-group">
      <div class="col-sm-12"><input type="text" class="form-control" name="title" required></div>
  </div>


    <div class="form-group">
    <div class="col-sm-12"><label for="description">Description</label><textarea class="form-control" rows="5" name="description"></textarea> </div>
    </div>

  <div class="form-group">
    <div class="col-sm-2"><input class="form-control btn btn-primary" type="submit" value="Submit"></div>
  </div>

  </form>
</div>
