<div class="d-flex flex-row justify-content-xl-between mb-3">
  <h3 class="text-info">{{ project.title }}</h3>
  <div class="d-flex justify-content-end">
    {{#if userMatch}}
    <div class="p-2">

      <a href="/project/{{project.id}}/edit"><button class="btn btn-info" type="button" name="button">Edit Project</button></a>
    </div>
    <div class="p-2">
      <form class="" action="/project/{{project.id}}/edit?_method=DELETE" method="post">
        <button class="btn btn-info" type="submit" name="button">Delete</button>
      </form>

    </div>

    {{/if}}
  </div>

</div>
<div class="d-flex flex-row justify-content-xl-between mb-3">
  <div class="card border-0 col-sm-3">
    <img class="img-thumbnail border-0 rounded float-left" src="{{project.imageUrl}}" width=250 alt="{{ project.title }}'s Image">

  </div>




  <div class="col-sm-7 ">
    <div class="col">
      <h5>By: <a class="text-info" href="/profile/{{project.creator.slug}}">{{ project.creator.name }} </a></h5>
      <h5>Date: {{ dateTime }}</h5>
      <h5>Category:<a  class="text-info" href="/category/{{ project.category }}"> {{ project.category }}</a></h5>
      {{#if projectPatternExist}}
      <h5>Based on: <a class="text-info" href="/template/{{project.pattern.id}}">{{project.pattern.title}}</a></h5>
      {{/if}}

    </div>

  </div>
</div>
<div class="d-flex flex-row justify-content-xl-between">
  <div class="card border-info mb-3 col-md-4" >

    <h6 >Materials:</h6>
    <p class="card-text">{{ project.material }}</p>



  </div>
  <div class="card border-info mb-3 col-md-7" >

    <h6>Reflections: </h6>
    <p class="card-text"> {{ project.reflection }}</p>
  </div>
</div>
