<div class='row'>
  <div class='col s12'>
    <ul class='tabs brown'>
      <li class='tab col s3'><a class='black-text' href='#consolePage'>Console</a></li>
      <li class='tab col s3'><a class='black-text'href='#usersPage'>Users</a></li>
      <li class='tab col s3'><a class='black-text'href='#threadsPage'>Threads</a></li>
      <li class='tab col s3'><a class='black-text'href='#answersPage'>Answers</a></li>
    </ul>
  </div>
  <div class="">
    &nbsp;
    <h5>Welcome back {{currentUser.name}}</h5>
    <p><b> Admin Code</b> {{currentUser.adminCode}}</p>
    <p>________________________</p>
  </div>
  <div id='consolePage' class='col s12'>
    <div class=''>
      <table>
        <tr>
          <td></td>
          <td></td>
          <td></td>
        </tr>
        <tr>
          <td>Users</td>
          <td>
            <form class="" action="/deleteAllUsers" method="post">
                <a class="btn red" onclick="Materialize.toast('All users deleted from database', 2000)"><i class="material-icons right">delete_sweep</i>Delete</a>
            </form>
          </td>
        </tr>
        <tr>
          <td>Threads</td>
          <td>
            <form class="" action="/deleteAllThreads" method="post">
                <a class="btn red" onclick="Materialize.toast('All threads deleted from database', 2000)"><i class="material-icons right">delete_sweep</i>Delete</a>
            </form>
          </td>
        </tr>

        <tr>
          <td>Answers</td>
          <td>
            <form class="" action="/deleteAllAnswers" method="post">
                <a class="btn red" onclick="Materialize.toast('All answers deleted from database', 2000)"><i class="material-icons right">delete_sweep</i>Delete</a>
            </form>
          </td>
        </tr>
      </table>
    </div>
  </div>
  <!-- Users tab -->
  <div id='usersPage' class='col s12'>
    <ul class="collapsible" data-collapsible="accordion">
        {{#each users}}
        <li>
          <div class="collapsible-header black white-text"><i class="material-icons">filter_drama</i>{{this.name}}</div>
          <div class="collapsible-body">
            <table>
            <tr>
              <th>Full Name</th>
              <th>Email</th>
              <th>Unique ID</th>
              <th>Edit User Details</th>
              <th>Delete User</th>
            </tr>
            <form class="" action="/profile/adminconsole/{{this.id}}?_method=PUT" method="post">
              <tr>
              <td> <input type="text" name="name" value="{{this.name}}" ></td>
              <td> <input type="email" name="email" value="{{this.email}}" ></td>
              <td> {{this.id}}</td>
              <td>
                <button class="btn black" type="submit" name="button"><i class="material-icons">brush</i></button>
              </td>
             </form>
              <td>
              <form class="" action="/user/{{this.id}}?_method=DELETE" method="post">
                <button class="btn black" type="submit" name="button"><i class="material-icons">delete</i></button>
                </form>
            </td>
            </tr>

          </table>
        </div>
        </li>
          {{/each}}
      </ul>
  </div>
  <div id='threadsPage' class='col s12'>Test 3</div>
  <div id='answersPage' class='col s12'>Test 4</div>
</div>
