<div class='login full-vh flex'>

<div class='col-md-5'>
  <% include ../partials/alerts %>
  <form action="/user/signup" method="POST">
    <div class="form-group">
      <label for="authEmail">Email</label>
      <input id="authEmail" class="form-control" type="email" name="email">
    </div>

    <div class="form-group">
      <label for="authName">Name</label>
      <input id="authName" class="form-control" type="text" name="name">
    </div>

    <div class="form-group">
      <label for="authPassword">Password</label>
      <input id="authPassword" class="form-control" type="password" name="password">
    </div>

    <div class="form-group">
        <button class="col-md-12 btn btn-primary">Sign Up</button>
    </div>
  </form>
  <form action="/auth/login" method="GET">
  <button class="col-md-12 btn btn-danger">Log in</button>
  </from>
</div>

</div>
