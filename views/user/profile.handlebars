
<div class="d-flex flex-row justify-content-xl-between mb-2">
  <h2 class="text-info">{{ user.name }}</h2>
  <div  class="d-flex justify-content-end">

    <div class="p-2">
      <a href="/profile/edit"><button class="btn btn-info" type="button" name="button">Edit</button></a>
    </div>
    <div class="p-2">
      <form class="" action="/profile?_method=DELETE" method="post">
        <button class="btn btn-info" type="submit" name="button">Delete Account</button>
      </form>
    </div>

  </div>


</div>
<div  class="d-flex justify-content-start">
  <div class="card border-0 col-sm-3">

    <img class="img-thumbnail border-0 rounded float-left" src="{{user.imageUrl}}" width=250 alt="{{ user.name }}'s Image">
  </div>

  <div class="col-sm-3">
    <div class="">
      <h5 class="text-info">Email: {{ user.email }}</h5>
      {{!-- <li>{{ user.preferences }}</li>
      <li>{{ user.level }}</li> --}}

    </div>

  </div>
  <div class="col-sm-6 border rounded border-info">
    <div class="p-1">
      <h3 class="text-info">Bookmark</h3>

      <div class="d-flex flex-wrap">
        {{#each user.bookmark as |bookmark| }}
        <div class="card m-1" style="width: 10.15rem;">
          <a class="text-info" href="/template/{{ bookmark.id }}">

              <p class="card-title">{{bookmark.title}}</p>

            <img class="card-img-top"  src="{{bookmark.imageUrl}}" height=120 alt="{{bookmark.title}}'s image">
          </a>
          <div class="mp-0 d-flex flex-row">
            <a href="/template/{{ bookmark.id }}/variation/new"><button class="btn btn-info btn-sm" type="button" name="button">Completed</button></a>
            <form class="removeBookmarkForm" action="/template/{{bookmark.id}}/bookmark?_method=PUT" method="post">
              <button  class="btn btn-info btn-sm" type="submit" name="button">Remove</button>
              <input type="hidden" name="patternId" value="{{bookmark.id}}">
            </form>
          </div>

        </div>
        {{/each}}
      </div>
    </div>
  </div>
</div>
<div class="mb-3">
  <h3 class="text-info">Pattern</h3>
  <div class="d-flex flex-wrap">
    {{#each patterns as |pattern| }}
    <div class="card m-1" style="width: 11rem;">
      <a href="/template/{{ pattern.id }}" class="text-info">
      <img class="card-img-top"  src="{{pattern.imageUrl}}" height=150 alt="{{pattern.title}}'s image">
        <div class="card-body">
          <p class="card-text">{{pattern.title}}</p>
        </div>
      </a>

    </div>
    {{/each}}
  </div>


</div>



<div class="mb-2">
  <h3 class="text-info">Projects</h3>
  <div class="d-flex flex-row">
    {{#each projects as |project| }}
    <div class="card m-1" style="width: 11rem;">
      <a href="/project/{{ project.id }}" class="text-info">
      <img class="card-img-top"  src="{{project.imageUrl}}" height=150 alt="{{project.title}}'s image">
        <div class="card-body">
          <p class="card-text">{{project.title}}</p>
        </div>
      </a>

    </div>
    {{/each}}
  </div>

  </ul>
</div>
