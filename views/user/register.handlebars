<h2 class="text-info">Registration</h2>

<form enctype="multipart/form-data"  action="/register" method="post" data-toggle="validator" role="form">
  <div class="form-group form-inline row">

    <div class="form-group col-sm-4">
      <div class="m-2">
        <label class="text-info" for="name">Name: </label>
      </div>
      <input class="col-sm-9" type="text" name="user[name]" placeholder="e.g. John Doe" required>



    </div>

    <div class="form-group col-sm-4">
      <div class="m-2">
        <label class="text-info" for="email">Email:</label>

      </div>
      <input class="col-sm-9" type="email" name="user[email]" placeholder="e.g. domain@email.com" required>


    </div>

    <div class="form-group col-sm-4">
      <div class="m-2">
        <label class="text-info" for="password">Password:</label>
      </div>
      <input  class="col-sm-7" type="password" data-minlength="8" name="user[password]" placeholder="min. 8 characters" required>


    </div>

  </div>
  <div class="row m-2 mb-3" height=200>
    <div class="form-group col-md-4 card border-info card-header card-body text-info">
      <label for="image">Image :</label>
      <input type="file" name="image">
    </div>

  </div>

  <button class="btn btn-info" type="submit" name="button">Submit</button>
</form>
