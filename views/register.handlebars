<div class="p-3 mb-2 bg-light rounded text-white">
  <h1 class="lead text-primary p">Register</h1>
  <h1></h1>
  <form action="/register" method="post">
    <div class="form-group text-muted">
      <label for="name">Username</label>
      <input type="text" name="user[name]" class="form-control" placeholder="Enter your name">
    </div>
    <div class="form-group text-muted">
      <label for="email">Email</label>
      <input type="email" name="user[email]" class="form-control" placeholder="Enter Email">
    </div>
    <div class="form-group text-muted">
      <label for="password">Password</label>
      <input type="password" name="user[password]" class="form-control" placeholder="Password">
      <small id="emailHelp" class="form-text text-muted">Please enter a password with at least 8 characters</small>
    </div>
    <div class="form-group text-muted">
      <label for="phoneNumber">Phone Number</label>
      <input type="tel" name="user[phoneNumber]" class="form-control" placeholder="Phone Number">
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
  </form>
</div>
