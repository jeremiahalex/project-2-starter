
<div class="container">
  <h2>Login</h2>
  <form action="/login" method="post">
    {{!-- no need name here, cos we're logging in --}}

    <label for="email">Email</label>
    {{!-- NOTICE on the attribute type below  --}}
    <input type="email" name="user[email]" placeholder="e.g. happiness@email.com">

    <label for="password">Password</label>
    {{!-- NOTICE on the attribute type below  --}}
    <input type="password" name="user[password]" placeholder="happy password">

    <button type="submit" name="button">Submit</button>
  </form>
</div>

