<div class="content">
  <h4 class ="title">Please login to continue</h4>
</div>

<div class="content">
  <div class="row">
    <div class="col-md-4 col-md-offset-1">
      <form action="/login" method="post">
      <div class="form-group">
        <label for="email">Email</label>
        <input type="email" name="user[email]" placeholder="e.g. user@email.com">
      </div>
      <div class="form-group">
        <label for="password">Password</label>
        <input type="password" name="user[password]" placeholder="password">
        <button type="submit" class="btn-primary btn-xs btn-fill">Submit</button>
      </div>
    </form>
    </div>
  </div>
</div>
