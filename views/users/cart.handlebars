<h3>Your Cart</h3>

<ul>
  {{#each userCart as |tour|}}
    <div>
      <a href="/show/tourdetails/{{tour.bookedTour.slug}}">{{ tour.bookedTour.name }}</a>
      <p>{{ tour.tourDate }}</p>
    </div>
    <div class="row">
      <form action="/{{tour.bookedTour.slug}}/cart?_method=DELETE" method="post">
        <button class="btn waves-effect waves-light" type="delete" name="button">Delete
          <i class="material-icons right">delete</i>
        </button>
      </form>
    </div>

    <br>
  {{/each}}
</ul>

<h5>Please call 1-800-GOT-TOUR or email fantasytours@gmail.com with your details to confirm your booking!</h5>
