<h3>Registration</h3>
<form action="/register" method="post">
  <div class="form-row">
    <div class="form-group col-md-6">
      <label for="inputEmail4">Username</label>
      <input type="username" class="form-control" name="user[username]" placeholder="e.g. Josh Jackson" required>
    </div>
    <div class="form-group col-md-6">
      <label for="inputPassword4">Password</label>
      <input type="password" class="form-control" name="user[password]" placeholder="min. 8 characters" required>
    </div>
  </div>
  <div class="form-group">
    <label for="inputAddress">Email</label>
    <input type="email" class="form-control" name="user[email]" placeholder="e.g. user123@email.com" required>
  </div>
  <button type="submit" class="btn btn-primary" name="button">Register</button>
</form>
