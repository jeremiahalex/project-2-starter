<h3>Register</h3>

<form action="/register" method="post">
  <label for="name">Name</label>
  <input type="text" name="user[name]" placeholder="e.g. John Doe">
  <br>

  <label for="email">Email</label>
  <input type="email" name="user[email]" placeholder="e.g. domain@email.com">
  <br>

  <label for="password">Password</label>
  <input type="password" name="user[password]" placeholder="min. 6 characters">
  <br>

  <button type="submit" name="button">Submit</button>
</form>
