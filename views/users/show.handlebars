<ul class="nav nav-tabs">
  <li class="nav-item">
    <a class="nav-link active" href="#">My Listings</a>
  </li>
  <li class="nav-item">
    <a class="nav-link" href="/profile/{{user.username}}/offers">Trade requests</a>
  </li>
</ul>
{{#each listings as |listo|}}
<div class="card" style="width: 20rem;">
  <img class="card-img-top" src="{{listo.photos}}" alt="Card image cap">
  <div class="card-body">
    <h4 class="card-title">{{listo.title}}</h4>
    <p class="card-text">{{listo.description}}</p>
    <form action="/listings/requests/{{listo._id}}?_method=DELETE" method="post">
      <button type="submit" class="btn btn-danger">Delete</button>
    </form>
  </div>
  {{#if listo.dealt}}
  <div class="alert alert-danger" role="alert">
    Deal is closed!
  </div>
  {{else}}
  <form action="/listings/requests/{{listo._id}}?_method=PUT" method="POST" >
    <h3>Update my post</h3>
    <div class="form-group">
    <label for="title">Title:</label>
    <input type="text" name="title">
  </div>

  <div class="form-group">
  <label for="exampleFormControlTextarea1">Description:</label>
  <textarea class="form-control" name="description" id="exampleFormControlTextarea1" rows="3"></textarea>
  </div>
    <button type="submit" class="btn btn-warning">Update</button>
  </div>
</div>
{{/if}}
{{/each}}
