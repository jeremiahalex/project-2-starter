<h3>My Profile</h3></h3>

<h1>Hi my name is {{user.name}}</h1>

<h1>hello</h1>
<select name="test">
  {{#each context.skills}}
  <option value="{{context.skills.name}}">{{context.skills.name}}</option>
  {{/each}}
</select>
<h1>world</h1>

<form action="/profile/{{user.slug}}/settings?_method=PUT" method="post">

  <label for="nickname">Nickname</label>
  <input type="text" name="nickname"
          placeholder="Can be your well-known username or just smth that your friends call you~"
          value="{{user.profile.0.nickname}}">

  <label for="about">About Me</label>
  <input type="text" name="about" placeholder="Tell us a little bit about yourself!"
  value="{{user.profile.0.about}}">

  <label for="skills">Skills</label>
  <input type="text" name="skills" placeholder="C++, woodworking"
  value="{{user.profile.0.skills}}">

  <label for="projs">Past Projects and Gigs</label>
  <input type="text" name="projs" placeholder="anythings that you feel worth mentioning?"
  value="{{user.profile.0.projs}}">

  <label for="contact">Contact Me!</label>
  <input type="text" name="contact" placeholder="do share with us more details of the work!"
  value="{{user.profile.0.contact}}">

  <button type="submit" name="button">Submit</button>
</form>
