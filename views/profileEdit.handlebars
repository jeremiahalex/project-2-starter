<div class="p-3 mb-2 bg-light rounded text-white">
  <h1 class="lead text-primary p">Edit Profile</h1>

  <form action="/profile/edit?_method=PUT" method="post">
    <div class="form-group text-muted">
      <label for="name">Username</label>
      <input type="text" name="user[name]" class="form-control" value= {{user.name}} >
    </div>
    <div class="form-group text-muted">
      <label for="email">Email</label>
      <input type="email" name="user[email]" class="form-control" value= {{user.email}}>
    </div>
    <div class="form-group text-muted">
      <label for="phoneNumber">Phone Number</label>
      <input type="tel" name="user[phoneNumber]" class="form-control" value= {{user.phoneNumber}}>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
  </form>
</div>
