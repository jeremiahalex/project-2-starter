<div class="container">
  <h3>{{course.name}}</h3>
</br>
  <div class="details">

    <h4>Course Updates</h4>
  </br>

  <form action="/courseupdate/{{course.id}}?_method=PUT" method="post">
  <div class="course card-panel">
      <input type="text" name="name" value="{{course.name}}">
      <span class="blue-text text-darken-2">Name : {{course.name}}</span>
    </div>
  </br>
  <div class="description card-panel">
    <input type="text" name="description" value="{{course.description}}">
      <span class="blue-text text-darken-2">About : {{course.description}}</span>
    </div>
  </br>
  <div class="description card-panel">
    <input type="text" name="duration" value="{{course.duration}}">
      <span class="blue-text text-darken-2">Duration : {{course.duration}}</span>
    </div>
    <input type="text" name="date" class="datepicker" value="{{course.date}}">
    <input type="text" name="time" class="timepicker" value="{{course.time}}">
  </br>
  <div class="description card-panel">
    <input type="text" name="price" value="{{course.price}}">
      <span class="blue-text text-darken-2">Price : {{course.price}}</span>
    </div>
  </br>
    <button class="btn waves-effect waves-light" type="submit" name="action">Submit
   <i class="material-icons right"></i>
 </button>
</form>
</br>
 <form class="form-inline deleteForm"
       action="/courseupdate/{{course.id}}?_method=DELETE"
       method="post"
       >
 <button class="btn waves-effect waves-light" type="submit" name="button">Delete
<i class="material-icons right"></i>
</button>
</form>

  </div>
</div>
