<div class="container">
  <h4><blockquote>
      Course Details
    </blockquote></h4>
  <h3>{{course.name}}</h3>
  <h5>By : {{course.teacher.name}}</h5>
<br>
  <div class="card">
    <div class="card-content">
      <p>{{course.description}}</p>
    </div>
    <div class="card-tabs">
      <ul class="tabs tabs-fixed-width">
        <li class="tab"><a class="active" href="#test4">Address</a></li>
        <li class="tab"><a href="#test5">Time</a></li>
        <li class="tab"><a href="#test6">People</a></li>
      </ul>
    </div>
    <div class="card-content grey lighten-4">
      <div id="test4">{{course.google}}<br>
<form action="/course" method="post">
    <h3><input id="pac-input" name="google" class="controls" type="text" placeholder="Enter a location" value="{{course.google}}">
        <div id="map"></div>
        <div id="infowindow-content">
        <span id="place-name"  class="title"></span><br>
        Place ID <span id="place-id"></span><br>
        <span id="place-address"></span>
    </div></h3>
    <button class="btn waves-effect waves-light" type="submit" name="action">Submit
    <i class="material-icons right">send</i>
  </button>
</form>
  </div>
        <div id="test5">Date : {{course.date}}<br>
          Time : {{course.time}}<br>
          Duration : {{course.duration}}</div>
          <div id="test6">Instructor : {{course.teacher.name}}<br>
            Current Students : {{course.currentStudents}}</div>
          </div>
  </div>
{{#if admin}}
  <a a href="/courseupdate/{{course.id}}" class="waves-effect waves-light btn-large"><i class="material-icons left">cloud</i>Update</a>
{{else}}
  <a a href="/pending" class="waves-effect waves-light btn-large"><i class="material-icons left">cloud</i>Sign Up</a>
{{/if}}
<h3>Reviews</h3>
<form action="/course" method="post">

  <label for="title">Title</label>
  <input type="hidden" name="courseId" value={{course.id}}>
  <input type="text" id="title" name="title" placeholder="Review Title">
  <br>

  <label for="description">What would you like to say?</label>
  <textarea id="description" name="description" rows="8" cols="80"></textarea>
  <br>

  <button type="submit" name="button">Submit</button>
</form>

