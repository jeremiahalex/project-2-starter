{{#each showlist as |showlist|}}
<div class="row">
        <div class="col s12 m7">
          <div class="card">
            <div class="card-image">
              <img src= {{ showlist.showpic }} >
              <span class="card-title">{{ showlist.name }}</span>
            </div>
            <div class="card-content">
              <p>{{ showlist.description }}</p>
            </div>
            <div class="card-action">
              <a href="/show/{{showlist.slug}}">Show Available Tours</a>
            </div>
          </div>
        </div>
      </div>
{{/each}}
