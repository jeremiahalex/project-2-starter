<div class="container mainCont">

  <div class="leftCont">
    <div class="leftTitles">
      Items List
      &nbsp;<input type="text" placeholder="Search..">
    </div>

    <div class="leftView">

        {{#each items}}
          <div class="itemBox">
            <img src="/style/img/placeholder.png">
            <p>{{ name }}</p>
            <p>SGD${{ price}}</p>
            <button type="submit" class="btn btn-default addOrderBtn" data-name="{{ name }}" data-price="{{ price }}" data-id="{{ _id }}">Add To Cart</button>
          </div>
        {{/each}}

    </div>
  </div>  <!-- End leftCont -->

  <div class="rightCont">
    <div class="rightTitles">
      Order
    </div>
    <div class="rightView">
      <form action="/order" method="post">

        <!-- Customer Dropdown -->
        <select id="custSelectDropdown">
          {{#each customers}}
            <option placeholder="hello" value="{{ _id }}">{{ firstName }} {{ lastName }}</option>
          {{/each}}
        </select>

        <!-- Item Div -->
        <div class="itemList">
        </div>


        <br>
        <input type="submit" name="Place Order" id="mainOrderBtn">
        <!-- <input class="addQuantity" type="number" value="1" min="0"> -->
      </form>
    </div>
  </div>
