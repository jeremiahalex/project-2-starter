<form action="/supplier" method="post">
  <h3>Add Supplier</h3>
  <label for="lblCompanyName">Company Name :</label>
  <input type="text" name="supplier[txtName]" placeholder="e.g. John Doe">
  <br/>

  <label for="lblEmail">Email :</label>
  <input type="text" name="supplier[txtEmail]" placeholder="e.g. domain@email.com">
  <br/>

  <label for="lblEmail">Contact No :</label>
  <input type="number" name="supplier[txtContact]" placeholder="e.g. 82226668">
  <br/>

  <label for="lblBusinessType">Address :</label>
  <input type="text" name="supplier[txtAddress]" placeholder="e.g. Blk 1 Pasir ris drive">
  <br/>

  <label for="lblPostalCode">Unit :</label>
  <input type="text" name="supplier[txtUnit]" placeholder="e.g. #01-11">
  <br/>

  <label for="lblPostalCode">Postal Code :</label>
  <input type="number" name="supplier[txtPostalCode]" placeholder="e.g. 760333" >
  <br/>

  <button type="submit" name="btnSubmit">Submit</button>
</form>
