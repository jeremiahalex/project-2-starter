<div class="page-header">
  <div class="page-header-image" data-parallax="true" style="background-image: url('/assets/img/wallpaper3.jpg');"></div>
  <br>
  <div class="container">
    <div class="row">
      <div class="card card-login">
        <div class="card-plain">
          <div class="card-block">
            <h2 class="text-center">{{ supplier.company }} </h2>

            <p class="text-center">Contact No. :{{ supplier.contact}}</p>
            <p class="text-center">Email: {{ supplier.email }}</p>

            <p class="text-center">
              {{ supplier.address }}<br> #{{ supplier.unit }}, Singapore {{ supplier.postalcode }}
            </p>

            <h3 class="card-title text-center">Update</h3>
            <form action="/supplier/update/{{ supplier.id }}?_method=PUT" method="post">


              <label for="lblCompanyName">Company Name : </label>
              <input type="text" class="form-control" name="supplier[txtName]" placeholder="e.g. John Doe" value="{{ supplier.company }}">
              <br/>

              <label for="lblEmail">Email : </label>
              <input type="text" class="form-control" name="supplier[txtEmail]" placeholder="e.g. domain@email.com" value="{{ supplier.email }}">
              <br/>

              <label for="lblEmail">Contact No : </label>
              <input type="number" class="form-control" name="supplier[txtContact]" placeholder="e.g. 82226668" value="{{ supplier.contact }}">
              <br/>

              <label for="lblBusinessType">Address : </label>
              <input type="text" class="form-control" name="supplier[txtAddress]" placeholder="e.g. Blk 1 Pasir ris drive" value="{{ supplier.address }}">
              <br/>

              <label for="lblPostalCode">Unit : </label>
              <input type="text" class="form-control" name="supplier[txtUnit]" placeholder="e.g. #01-11" value="{{ supplier.unit }}">
              <br/>

              <label for="lblPostalCode">Postal Code : </label>
              <input type="number" class="form-control" name="supplier[txtPostalCode]" placeholder="e.g. 760333" value="{{ supplier.postalcode }}">
              <br/>

              <div class="text-center">
                <button type="submit" name="button" class="btn bg-warning">Submit</button>
              </div>
            </form>

            <h3 class="card-title text-center">Delete Supplier</h3>
            <form action="/supplier/update/{{ supplier.id }}?_method=DELETE" method="post">
              <div class="text-center">
                <button type="submit" class="btn bg-warning" name="button">Delete</button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
