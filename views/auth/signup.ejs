<div class="panel panel-primary">
  <div class="panel-heading"><h4>Create Account</h4></div>
  <div class="panel-body">
    <form action="/auth/signup" method="POST">
      <div class="form-group">
        <label for="authEmail">Email</label>
        <input id="authEmail" class="form-control" type="email" name="email">
      </div>
      <div class="form-group">
        <label for="authName">Name</label>
        <input id="authName" class="form-control" type="text" name="name" placeholder="minimum length of 5 characters">
      </div>
      <div class="form-group">
        <label for="authPassword">Password</label>
        <input id="authPassword" class="form-control" type="password" name="password" placeholder="minimum length of 8 characters">
      </div>
      <button type="submit" ">Create New Account!</button>
    </form>
  </div>
</div>