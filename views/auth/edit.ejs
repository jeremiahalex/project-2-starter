<div class="jumbotron">
  <div class="container">
    <h1 class="display-3">edit your profile</h1><br>
  </div>
</div>
<div class="container">
  <form action=<%= "/auth/update/" + currentUser._id + "?_method=PUT" %> method="POST">
    <div class="form-group">
      <label for="name">Name</label>
      <input type="text" class="form-control" id="nameInput" name="name" value="<%= currentUser.name %>">
    </div>
    <div class="form-group">
      <label for="email">Email</label>
      <input type="text" class="form-control" id="emailInput" name="email" value="<%= currentUser.email %>">
    </div>
    <div class="form-group">
      Intended involvement<br>
      <div class="form-check">
        <label class="form-check-label" for="userTypeAdmin">
          <% if (currentUser.userTypes.admin === true) { %>
            <input class="form-check-input" type="checkbox" id="userTypeAdmin" name="userTypeAdmin" value=true checked="checked">
          <% } else { %>
            <input class="form-check-input" type="checkbox" id="userTypeAdmin" name="userTypeAdmin" value=true>
          <% } %>
          I am looking to start my own volunteer programs
        </label>
      </div>
      <div class="form-check">
        <label class="form-check-label" for="userTypeGuardian">
          <% if (currentUser.userTypes.guardian === true) { %>
            <input class="form-check-input" type="checkbox" id="userTypeGuardian" name="userTypeGuardian" value=true checked="checked">
          <% } else { %>
            <input class="form-check-input" type="checkbox" id="userTypeGuardian" name="userTypeGuardian" value=true>
          <% } %>
          I am looking for existing programs to enter a loved one in
        </label>
      </div>
      <div class="form-check">
        <label class="form-check-label" for="userTypeVolunteer">
          <% if (currentUser.userTypes.volunteer === true) { %>
            <input class="form-check-input" type="checkbox" id="userTypeVolunteer" name="userTypeVolunteer" value=true checked="checked">
          <% } else { %>
            <input class="form-check-input" type="checkbox" id="userTypeVolunteer" name="userTypeVolunteer" value=true>
          <% } %>
          I am looking for existing programs to volunteer in
        </label>
      </div><br>
    <button type="submit" class="btn btn-primary">Submit</button><br><br>
  </form>
  <form action=<%= "/password/" + currentUser._id + "?_method=PUT" %> method="POST">
    <div class="form-group">
      <label for="name">Password</label>
      <input type="text" class="form-control" id="passwordInput" name="password" placeholder="n3wP455w0rd">
    </div>
    <button type="submit" class="btn btn-primary">Submit</button><br><br>
  </form>
  <form class="deleteForm mb-5" method="POST" action=<%= "/auth/" + currentUser._id + "?_method=DELETE" %>>
    <button type="submit" class="btn btn-danger">Delete your account</button>
  </form>
</div>
