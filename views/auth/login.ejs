<% include ../partials/headerLog %>

  <div class="row">
    <div class="col s8 offset-s2 center-align login-box">
      <h2>Welcome to Yummy Thoughts</h2>
      <h5>A place for people to share good food</h5>
      <form action="/login" method="POST">

        <div class="input-field col s10 offset-s1 left-align">
          <input id="username" type="text" name="username">
          <label for="username">Username</label>
        </div>

        <div class="input-field col s10 offset-s1 left-align">

          <input id="password" type="password" name="password">
          <label for="password">Password</label>
        </div>

        <button type="submit" class="waves-effect waves-light btn">Login</button>
      </form>

      <br>
      <div class="divider"></div>
      <h5>Are you new here?</h5>
      <a href="/signup" class="waves-effect waves-light btn">Sign Up</a>

    </div>
  </div>

  <% include ../partials/footerLog %>
