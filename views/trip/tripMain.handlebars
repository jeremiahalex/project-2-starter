
<br>
<div class="container">
  <div class="row">
    <div class="col-sm-2">
      <a href="/home" class="btn btn-danger">Back</a>
    </div>
    <div class="col-sm-10">
      <div class="tripDetails">
      <input type="hidden" id="tripId" value="{{results._id}}">
      Trip Name : {{results.tripName}}<br>
      Country : {{results.country}}<br>
      City : {{results.city}}<br>
      Date From : {{results.dateFrom}}<br>
      Date To : {{results.dateTo}}<br>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-2"></div>
    <div class="col-sm-10">
      <br>
      <!-- <div id="map"></div> -->
    </div>
  </div>
  <div class="row">
    <div class="col-sm-2"></div>
    <!-- Google Places Search -->
    <div class="col-sm-6 mx-auto">
      <br>
      <div class="input-group mb-3">
        <input id="placesSearch" type="text" class="form-control" placeholder="Search for a place" aria-label="Search for a place" aria-describedby="basic-addon2">
        <div class="input-group-append">
          <button class="btn btn-outline-primary" type="button">Add Place</button>
        </div>
      </div>
      <!-- <input id="placesSearch" type="text" placeholder="Search Box">
      <button type="button" id="addPlace" class="btn btn-light">Add Place</button> -->
    </div>
    <!-- List of Locations -->
    <div class="col-sm-4 mx-auto">
      <br>
      List of Locations to Visit
        {{#each results2}}
        <div class="form-check">
          <input class="form-check-input" type="checkbox" value="{{id}}" id="{{id}}">
          <label class="form-check-label" for="{{id}}">&nbsp;{{locationName}}</label>
        </div>
        {{/each}}
    </div>
  </div>
</div>

