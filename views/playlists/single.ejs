<h1><%= playlist.name %></h1>
<p>a playlist by <%= playlist.creator.name %></p>
<% let collaborators = playlist.tracks.map(e => e.contributor.name).filter((e, i, a) => a.indexOf(e) === i).join(', ') %>
<p>collaborators: <%= collaborators %></p>
<hr>
<div class="row">
  <div class="col-md-6 col-md-push-6">
    <div class="well add-track clearfix">
      <h3>add a track.</h3>
      <form action="<%= '/playlists/'+playlist._id+'/add' %>" method="post" accept-charset="utf-8">
        <div class="input-group">
          <span class="input-group-addon" id="sizing-addon2">Title</span>
          <input type="text" class="form-control" name="title" placeholder="'Get Ready To Wiggle'" aria-describedby="sizing-addon2">
        </div>
        <div class="input-group">
          <span class="input-group-addon" id="sizing-addon2">Artist</span>
          <input type="text" class="form-control" name="artist" placeholder="'The Wiggles'" aria-describedby="sizing-addon2">
        </div>
        <button class="btn btn-primary" type="submit">put it in there!</button>
      </form>
      <% if (locals.user.name === playlist.creator.name) { %>
        <a href="<%= '/playlists/'+playlist._id+'/delete' %>"><div class="label pull-right delete">DELETE THIS PLAYLIST</div></a>
      <% } %>
    </div>
  </div>
  <div class="col-md-6 col-md-pull-6">
    <% if (playlist.tracks.length === 0) { %>
      <h1>there's nothing here.<br>add some tracks!</h1>
    <% } %>
    <% playlist.tracks.sort((a,b) => b.rank - a.rank).forEach((e, i) => { %>
      <div class="panel track-panel">
        <div class="label pull-left"><%= i+1 %></div>
        <a href="<%= '/playlists/'+playlist._id+'/up/'+e._id %>"><div class="label label-btn pull-right"><i class="fa fa-angle-up"></i></div></a>
        <div class="label pull-right rank"><%= e.rank %></div>
        <a href="<%= '/playlists/'+playlist._id+'/down/'+e._id %>"><div class="label label-btn pull-right"><i class="fa fa-angle-down"></i></div></a>
        <% if (locals.user.name === e.contributor.name) { %>
          <a href="<%= '/playlists/'+playlist._id+'/delete/'+e._id %>"><div class="label pull-right delete"><i class="fa fa-trash"></i></div></a>
        <% } %>
          <hr>
          <h2><%= e.title %></h2>
          <h4 class="pull-right"><em><%= e.artist %></em></h4>
          <hr>
          <p class="tiny pull-left">contributed by <%= e.contributor.name %></p>
      </div>
    <% }) %>
    <!-- <%= playlist %> -->
  </div>
</div>
<hr>